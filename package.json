{
  "name": "vscode-blogcard",
  "displayName": "Blogcard Generator",
  "description": "This extension generates blog card from selected test (URL / Entire HTML) in editor screen.",
  "repository": {
    "url": "https://github.com/tonoccho/vscode-blogcard.git"
  },
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Plugins"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "%title%",
      "properties": {
        "blogcard.templateWithoutImage": {
          "type": "string",
          "default": "blogcard-template/without-image.md",
          "description": "ブログカードのHTMLテンプレート（画像無し）を設定してください"
        },
        "blogcard.templateWithImage": {
          "type": "string",
          "default": "blogcard-template/with-image.md",
          "description": "ブログカードのHTMLテンプレート（画像あり）を設定してください"
        }
      }
    },
    "commands": [
      {
        "command": "vscode.contextmenu.createBlogCardFromURL",
        "title": "Create blog card from URL"
      },
      {
        "command": "vscode.contextmenu.createBlogCardFromHTMLSource",
        "title": "Create blog card from HTML Source"
      },
      {
        "command": "vscode.contextmenu.createBlogCardFromAmazonHTMLSource",
        "title": "Create blog card from Amazon HTML Source"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "vscode.contextmenu.createBlogCardFromURL",
          "group": "blogCardGoup@1"
        },
        {
          "when": "editorFocus",
          "command": "vscode.contextmenu.createBlogCardFromHTMLSource",
          "group": "blogCardGoup@2"
        },
        {
          "when": "editorFocus",
          "command": "vscode.contextmenu.createBlogCardFromAmazonHTMLSource",
          "group": "blogCardGoup@3"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0"
  },
  "dependencies": {
    "@aws-sdk/credential-provider-node": "^3.893.0",
    "@aws-sdk/hash-node": "^3.370.0",
    "@aws-sdk/signature-v4": "^3.370.0",
    "@aws-sdk/url-parser-node": "^3.1.0",
    "@aws-sdk/util-utf8-node": "^3.259.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "jsdom": "^27.0.0",
    "node-fetch": "^3.3.2",
    "paapi5-nodejs-sdk": "^1.1.0",
    "request": "^2.88.2"
  }
}
